= javascript_include_tag "properties"
= google_map(properties_for_sale.decorate)
%form.filters(action="" method="get")
  %fieldset
    %label Filter Results:
    = select_tag "property_type", property_type_options_for_filter_select(params[:property_type])
    = select_tag "submarket", submarket_options_for_filter_select(params[:submarket])
- if properties_for_sale.present?
  = render 'table', properties: properties_for_sale.decorate
- else
  = render 'properties/no_properties_found'
= will_paginate properties_for_sale
