%h2= deco_property.title
%p= deco_property.description
=link_to image_tag(deco_property.attached_image.url(:small)),
  image_path(deco_property.attached_image.url)

%table
  %tbody

    %tr
      %td= deco_property.bank_owned
    %tr
      %td= deco_property.lease
    %tr
      %td= deco_property.sale
    %tr
      %td
        %strong Location:
      %td
        = deco_property.formatted_address
    %tr
      %td
        %strong Size:
      %td
        = deco_property.size
    %tr
      %td
        %strong Price:
      %td
        = deco_property.price
