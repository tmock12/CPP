!!! 5
%html
  %head
    %title CPP Properties
  = stylesheet_link_tag "application", media: "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
  %body
    %header
      - if current_user
        .admin_header
          Welcome #{current_user.name}
          = link_to "dashboard", :dashboard
          = link_to "sign out", :sign_out
      = link_to "http://www.cpprofessionals.com/", class: 'logo-link' do
        = image_tag "cpp_header.png"
      .property_links
        = link_to "Properties for Sale", for_sale_properties_path, class: active_link?(for_sale_properties_path)
        = link_to "Properties for Lease", for_lease_properties_path, class: active_link?(for_lease_properties_path)
    - flash.keys.each do |type|
      .flash{ class: type }
        %p= flash[type]
    .content
      = yield
    = yield :scripts
